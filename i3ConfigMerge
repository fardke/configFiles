#!/bin/bash

i3config="$HOME/.i3/config"

if [[ -f $i3config ]] ; then
    echo "$i3config is saved to ~/.i3/config.old"
    cp $i3config ~/.i3/config.old
fi

echo "# Do not edit this file.\n # Use ~/configFiles/i3/config.base or ~/configFiles/i3/config.laptop or ~/configFiles/i3/config.fix" > $i3config

cat i3/config.base >> $i3config
if [[ $1 == "-l" ]] ;then
    cat i3/config.laptop >> $i3config
elif [[ $1 == "-f" ]] ; then
    cat i3/config.fixe >> $i3config
else
    echo "Usage: $0 [action] \n\t -l to use config.laptop \n\t -f to use config.fix"
fi
